@page
@model ProyectoBaseDD.Pages.Estudiantes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Estudiante.Ncontrol" />
            <div class="form-group">
                <label asp-for="Estudiante.Nombre" class="control-label"></label>
                <input asp-for="Estudiante.Nombre" class="form-control" />
                <span asp-validation-for="Estudiante.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Ncontrol" class="control-label"></label>
                <input asp-for="Estudiante.Ncontrol" class="form-control" />
                <span asp-validation-for="Estudiante.Ncontrol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Semestre" class="control-label"></label>
                <input asp-for="Estudiante.Semestre" class="form-control" />
                <span asp-validation-for="Estudiante.Semestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.CveCarrera" class="control-label"></label>
                <select asp-for="Estudiante.CveCarrera" class="form-control" asp-items="ViewBag.CveCarrera"></select>
                <span asp-validation-for="Estudiante.CveCarrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Apellido" class="control-label"></label>
                <input asp-for="Estudiante.Apellido" class="form-control" />
                <span asp-validation-for="Estudiante.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
