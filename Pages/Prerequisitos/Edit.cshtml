@page
@model ProyectoBaseDD.Pages.Prerequisitos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Prerequisito</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Prerequisito.IdPrerequisitos" />
            <div class="form-group">
                <label asp-for="Prerequisito.CveAsig" class="control-label"></label>
                <select asp-for="Prerequisito.CveAsig" class="form-control" asp-items="ViewBag.CveAsig"></select>
                <span asp-validation-for="Prerequisito.CveAsig" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prerequisito.IdKardex" class="control-label"></label>
                <select asp-for="Prerequisito.IdKardex" class="form-control" asp-items="ViewBag.IdKardex"></select>
                <span asp-validation-for="Prerequisito.IdKardex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
