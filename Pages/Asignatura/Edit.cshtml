@page
@model ProyectoBaseDD.Pages.Asignatura.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Asignatura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Asignatura.Nombre" class="control-label"></label>
                <input asp-for="Asignatura.Nombre" class="form-control" />
                <span asp-validation-for="Asignatura.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asignatura.CveAsig" class="control-label"></label>
                <input asp-for="Asignatura.CveAsig" class="form-control" readonly/>
                
                <span asp-validation-for="Asignatura.CveAsig" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asignatura.CveCarrera" class="control-label"></label>
                <input asp-for="Asignatura.CveCarrera" class="form-control" asp-items="ViewBag.CveCarrera"/>
                <input asp-for="Asignatura.CveCarreraNavigation.CveCarrera" class="form-control" readonly />
                <input asp-for="Asignatura.CveCarreraNavigation.Nombre" class="form-control" readonly />
                <span asp-validation-for="Asignatura.CveCarrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asignatura.Creditos" class="control-label"></label>
                <input asp-for="Asignatura.Creditos" class="form-control" />
                <span asp-validation-for="Asignatura.Creditos" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="Asignatura.CveAsig" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
