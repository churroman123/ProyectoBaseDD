@page
@model ProyectoBaseDD.Pages.Asignatura.IndexModel

@{
    ViewData["Title"] = "Asignatura";
}

<h1>Asignaturas</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Agregar Asignatura</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Asignatura[0].Nombre)
            </th>
            <th>
                Cve. Asignatura
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asignatura[0].Creditos)
            </th>
            <th>
                Cve. Carrera
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Asignatura) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(ApplicationModelConventionExtensions => item.CveAsig)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CveCarreraNavigation.CveCarrera)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.CveAsig" class="btn btn-primary">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.CveAsig" class="btn btn-secundary">Detalles</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CveAsig" class="btn btn-warning">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
