@page
@model ProyectoBaseDD.Pages.Estudiantes.IndexModel

@{
    ViewData["Title"] = "Estudiantes";
}

<h1>Estudiantes</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Agregar Alumno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Ncontrol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante[0].Semestre)
            </th>
            <th>
                Cve. Carrera
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Estudiante) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ncontrol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semestre)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CveCarrera)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Ncontrol" class="btn btn-primary" >Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.Ncontrol" class="btn btn-secundary">Detalles</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Ncontrol" class="btn btn-warning">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
