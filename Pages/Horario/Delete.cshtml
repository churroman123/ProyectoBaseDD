@page
@model ProyectoBaseDD.Pages.Horario.DeleteModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Esta seguro de eliminar este horario?</h3>
<div>
    <h4>Horario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Grupo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Horario.Grupo)
        </dd>
        <dt class="col-sm-2">
           Horario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Horario.Horario1)
        </dd>
        <dt class="col-sm-2">
            Aula
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Horario.Aula)
        </dd>
        <dt class="col-sm-2">
            Cve. Asignatura
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Horario.CveAsig)
        </dd>
        <dt class="col-sm-2">
            ID Profesor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Horario.IdProfesor)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Horario.CveAsig" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Regresar</a>
    </form>
</div>
