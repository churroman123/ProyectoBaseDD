@page
@model ProyectoBaseDD.Pages.Horario.CreateModel

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar</h1>

<h4>Horario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Horario.CveAsig" class="control-label"></label>
                <select asp-for="Horario.CveAsig" class ="form-control" asp-items="ViewBag.CveAsig"></select>
            </div>
            <div class="form-group">
                <label asp-for="Horario.Grupo" class="control-label"></label>
                <input asp-for="Horario.Grupo" class="form-control" />
                <span asp-validation-for="Horario.Grupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario.IdProfesor" class="control-label"></label>
                <select asp-for="Horario.IdProfesor" class ="form-control" asp-items="ViewBag.IdProfesor"></select>
            </div>
            <div class="form-group">
                <label asp-for="Horario.Horario1" class="control-label"></label>
                <input asp-for="Horario.Horario1" class="form-control" />
                <span asp-validation-for="Horario.Horario1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario.Aula" class="control-label"></label>
                <input asp-for="Horario.Aula" class="form-control" />
                <span asp-validation-for="Horario.Aula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
