@model ProyectoBaseDD.Pages.Carreras.IndexModel

@{
    ViewData["Title"] = "Carrera";
}

<h1>Carrera</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Agregar Carrera</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Carrera[0].Nombre)
            </th>
            <th>
                Cve.Carrera
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera[0].Creditos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Carrera) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CveCarrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditos)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.CveCarrera" class="btn btn-primary">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.CveCarrera" class="btn btn-secundary">Detalles</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CveCarrera" class="btn btn-warning">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
