@page
@model ProyectoBaseDD.Pages.Asignatura.DeleteModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Estas seguro de eliminar?</h3>
<div>
    <h4>Asignatura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asignatura.Nombre)
        </dd>
        <dt class="col-sm-2">
            Creditos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asignatura.Creditos)
        </dd>
        <dt class="col-sm-2">
            Cve. Carrera
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asignatura.CveCarrera)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Asignatura.CveAsig" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Regresar</a>
    </form>
</div>
